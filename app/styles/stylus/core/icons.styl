//
// Icons
// -------------------------------------------------- //

.icon {
  position relative
  display inline-block
  width 25px
  height 25px
  overflow hidden
  fill currentColor
  vertical-align baseline
}
[data-icon] {
  display inline-block
}

.icon__cnt {
  width 100%
  height 100%
  background inherit
  fill inherit
  pointer-events none
  transform translateX(0)
  -ms-transform translate(0.5px, -0.3px)
  vertical-align top
}

