  clearfix()

  li {
    float left

    &.active {
      font-weight 700

      a {
        color #fff
      }
    }
    &:after {
      display inline-block
      content '|'
      font-weight 400
      margin 0 11px
    }

    &:last-child {
      &:after {
        display none
      }
    }
  }
  a {
    color #fff
    text-decoration none

    &:hover {
      color mix(#fff, #000, 85%)
    }
  }
}

.modal-form-wrap {
  position relative
  border 2px solid #fff

  .form-control {
    background-color rgba(255,255,255,.39)
    color #fff
    placeholder(#fff)
    border-color #fff
  }
  .form-group {
    margin-bottom 5px

    &.has-error {
      .form-control {
          padding-top 0
          padding-bottom 20px
      }
    }
  }
  .form-control-feedback {
    width 47px
    height 46px
    right 2px

    .icon {
      fill #fff
      vertical-align middle
    }
  }
  .form-control-message {
    color #fff
  }
  .divider {
    display block
    position relative
    margin 15px 0
    height 36px
    width 100%

    > span {
      position absolute
      left 50%
      margin-left -18px
      top 0
      display block
      width 36px
      border 1px solid #fff
      border-radius 50%
      text-align center
      line-height 1
      padding 11px 0
      text-indent 1px
      color #fff
      font-size 1.2rem
    }
    &:before,
    &:after {
      content ''
      position absolute
      left 0
      top 16px
      width calc(50% - 18px)
      height 1px
      background-color #fff
    }
    &:after {
      left auto
      right 0
    }
  }
}

