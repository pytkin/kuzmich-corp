//
// Layouts / Site Footer
// -------------------------------------------------- //

.site-footer {
  width 940px
  margin 0 auto
  border-top 1px solid #999

  .top-panel {
    padding 15px 0 20px
    clearfix()

    .left-col {
      float left
      width 182px
      margin-right 40px

      .footer-logo {
        display block
        width 182px
        height 116px
        background url(../img/static/footer-logo.png) no-repeat 0 0
        margin-bottom 30px
      }
      .social-nav {
        display block
        list-style none
        margin 0
        padding 0
        text-align center

        li {
          display inline-block
          margin 0 9px

          &.fb {
            a {
              background-image url("../img/static/fb-social-icon.png")
            }
          }
          &.in {
            a {
              background-image url("../img/static/in-social-icon.png")
            }
          }
        }
        a {
          display block
          width 20px
          height 20px
          background-repeat no-repeat
          background-position 0 0
        }
      }
    }
    .nav-col {
      float left
      width 718px
      font-size 1.4rem
      clearfix()

      > ul {
        list-style none
        margin 0
        padding 0

        > li {
          display block
          float left

          > a {
            display inline-block
            font-weight bold
            min-height 69px
          }
          > ul {
            list-style none
            margin 0
            padding 15px 0 0

            > li {
              margin-bottom 15px
            }
          }
        }
      }

      .col-1 {
        width 100px
        margin-right 30px
      }
      .col-2 {
        width 122px
        margin-right 30px
      }
      .col-3 {
        width 75px
        margin-right 50px
      }
      .col-4 {
        width 90px
        margin-right 30px
      }
      .col-5 {
        width 82px
        margin-right 30px

        > a {
          min-height 0
        }
      }
    }
  }
  .bottom-panel {
    padding 9px 0 16px
    border-top 1px solid #999
    text-transform uppercase
    color #999
    font-size 1rem
    line-height 1
    clearfix()

    .copyright {
      float left
      width 50%

      p {
        margin-bottom 0
      }
    }
    .footer-bottom-nav {
      text-align right
      float right
      width 50%
      list-style none
      margin 0
      padding 0

      li {
        display inline-block

        + li {
          margin-left 15px
        }
      }
      a {
        color #999
      }
    }
  }
}
