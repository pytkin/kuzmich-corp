.categories-cards {
  padding 20px 0 0
  margin-right -19px
  clearfix()

  .card {
    position relative
    float left
    margin-right 19px
    margin-bottom 20px
    width 460px
    height 234px
    background-position center
    background-size cover
    overflow hidden

    &:hover {
      .card-text {
        opacity 1
      }
    }
    .overlap-link {
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 3
    }
    .card-text {
      position absolute
      right 0
      top 0
      width 230px
      padding 20px 20px 16px
      background url(../img/static/categoryes-cards-text-bg.png) repeat 0 0 transparent
      opacity 0
      transition opacity .3s
    }
    .category-title {
      color #000
      font-size 2.8rem
      line-height 1.2
      font-weight bold
      margin 0 0 12px

      span {
        font-weight 300
      }
    }
    .category-descr {
      p:last-child {
        margin 0
      }
    }
  }
}

.project-descr {
  background-color #b29769
  color #fff
  margin-bottom 22px

  .block-text-wrapper {
    width 900px
    margin 0 auto
    padding 15px 0 5px
  }
  h3 {
    font-size 2rem
    text-transform uppercase
    margin 0 0 10px
  }
}

.main-gallery {
  position relative

  .gallery-item {
    float left
    display block
    width 220px
    margin-right 20px

    &:last-child {
      margin-right 0
    }
    .image-holder {
      background-color #e6e6e6
      overflow hidden

      img {
        max-height 150px
        max-width 220px
      }
    }
    .image-caption {
      padding 18px 20px 18px 20px
      font-size 2rem
      line-height 1.2
      letter-spacing 0.01em
      white-space pre-wrap
      word-wrap break-word
    }
  }
}

.inner-page {
  border-bottom 1px solid #999
  margin-bottom 25px

  .block-header {
    h2 {
      font-size 4.8rem
      line-height 5.2rem
      margin 0 0 8px
      color #000
      font-weight 300
      letter-spacing -0.01em
    }
  }
  .block-body {
    clearfix()
  }
  .side-nav {
    float left
    width 210px
    background-color #00a099
    list-style none
    padding 20px 10px 20px 20px
    margin 0
    color #fff
    font-size 1.8rem

    li {
      display block
      padding 10px 0

      &.active {
        font-weight bold
      }
    }
    a {
      color #fff
    }
  }
  .block-text {
    padding 30px 0 0 35px
    width 730px
    float right
    font-size 1.8rem
  }
}

.signup-form {
  background-color #d8c2a3
  font-size 2.1rem
  padding 38px 38px 0

  .form-actions {
    position relative
    margin 0 -38px
    background-color #00a099
    padding 36px 0
    text-align center

    [type="submit"] {
      border none
      background-color #fff
      background-image none
      line-height 1.2
      padding 9px 17px
    }
  }
  fieldset {
    border-bottom 1px solid #fff
    margin-bottom 25px

    &.no-border {
      border-bottom none
    }

    .form-group {
      clearfix()
      border-bottom none
      padding-bottom 0
      margin-bottom 20px

      label {
        width 224px
        display block
        float left
        margin-bottom 0
        padding 10px 0
        line-height 1.1

        & + .form-control {
          float left
          width calc(100% - 224px)
        }
      }
    }
  }
  .form-group {
    border-bottom 1px solid #fff
    padding-bottom 15px
    margin-bottom 26px

    label {
      margin-bottom 22px

      span {
        color #978772
      }
    }
  }
  .radio-group {
    padding-bottom 23px
    margin-bottom 26px
    border-bottom 1px solid #fff

    label {
      margin-bottom 0
    }
    .radio-inline {
      margin-left 95px
    }
  }
  .file-group {
    padding-bottom 26px
    margin-bottom 26px
    border-bottom 1px solid #fff

    label {
      margin-bottom 0

      & > span {
        color #978772
      }
    }
    input[type="file"] {
      display inline-block
      font-size 1.6rem
      line-height 1
      margin-left 100px
    }
  }
}
