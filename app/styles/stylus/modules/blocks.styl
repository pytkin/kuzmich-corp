.categories-cards {
  padding 20px 0 0
  margin-right -19px
  clearfix()

  .card {
    position relative
    float left
    margin-right 19px
    margin-bottom 20px
    width 460px
    height 234px
    background-position center
    background-size cover
    overflow hidden

    &:hover {
      .card-text {
        opacity 1
      }
    }
    .overlap-link {
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 3
    }
    .card-text {
      position absolute
      right 0
      top 0
      width 230px
      padding 20px 20px 16px
      background url(../img/static/categoryes-cards-text-bg.png) repeat 0 0 transparent
      opacity 0
      transition opacity .3s
    }
    .category-title {
      color #000
      font-size 2.8rem
      line-height 1.2
      font-weight bold
      margin 0 0 12px

      span {
        font-weight 300
      }
    }
    .category-descr {
      p:last-child {
        margin 0
      }
    }
  }
}

.project-descr {
  background-color #b29769
  color #fff
  margin-bottom 22px

  .block-text-wrapper {
    position relative
    width 900px
    margin 0 auto
    padding 15px 0 5px
    overflow hidden
    max-height 115px
    transition max-height .3s ease-in-out
    clearfix()
  }
  h3 {
    font-size 2rem
    text-transform uppercase
    margin 0 0 10px
  }
  .toggle-link {
    color #cfbea1
    position absolute
    bottom 10px
    right 0
    font-size 1.6rem
  }
}

.main-gallery {
  position relative

  .gallery-item {
    float left
    display block
    width 220px
    margin-right 20px

    &:last-child {
      margin-right 0
    }
    .image-holder {
      background-color #e6e6e6
      overflow hidden

      img {
        max-height 150px
        max-width 220px
      }
    }
    .image-caption {
      padding 18px 20px 18px 20px
      font-size 2rem
      line-height 1.2
      letter-spacing 0.01em
      white-space pre-wrap
      word-wrap break-word
    }
  }
}

.inner-page {
  border-bottom 1px solid #999
  margin-bottom 25px

  .block-header {
    h2 {
      font-size 4.8rem
      line-height 5.2rem
      margin 0 0 4px
      color #000
      font-weight 300
      letter-spacing -0.01em
    }
  }
  .block-body {
    clearfix()
  }
  .side-nav {
    float left
    width 210px
    background-color #00a099
    list-style none
    padding 20px 10px 20px 20px
    margin 0
    color #fff
    font-size 1.8rem

    li {
      display block
      padding 10px 0

      &.active {
        font-weight bold
      }
    }
    a {
      color #fff
    }
  }
  .block-text {
    padding 30px 0 0 35px
    width 730px
    float right
    font-size 1.8rem
  }

  &.catalog {
    .block-body {
      padding-bottom 10px
    }
    .catalog-item {
      margin-bottom 15px
      border: 2px solid #ccc
      padding 5px 20px 5px 5px
      clearfix()
    }
    .image-holder {
      float left
      width 178px
      margin-right 10px

      img {
        display block
        width 100%
        height auto
      }
    }
    .item-info {
      float left
      width 557px
      margin-right 20px
      padding 9px 0 0

      .item-header {
        clearfix()
        margin-bottom 13px

        h3 {
          font-size 2.8rem
          color #000
          margin 0
          display inline
        }
        .rating {
          float right
          width 132px
          height 22px
          display block
          padding 0
          margin 0
          list-style none
          font-size 0

          li {
            display inline-block
            width 23px
            height 22px
            background url(../img/static/rating-star-01.png) no-repeat 0 0

            &.empty {
              background-image url(../img/static/rating-star-02.png)
            }
          }
          li + li {
            margin-left 4px
          }
        }
      }
      .item-description {
        font-size 1.6rem

        strong {
          font-weight 500
          color #00a099
        }
        p {
          margin-bottom 10px
        }
        .show-more {
          line-height 1
          display inline-block
          padding 0
          margin 0 0 10px
          background none
          border none
          text-decoration none
          outline 0

          span {
            margin-left 5px
          }
        }
        .show-on-map {
          text-decoration underline

          &:hover {
            text-decoration none
          }
        }
      }
      .full-description {
        height 0
        overflow hidden

        strong {
          color #000
          font-weight bold
        }
        p {
          margin-bottom 20px
        }

        &.show {
          padding 10px 0 0 40px
          height auto
          overflow visible
        }
      }
    }
    .item-details {
      float left
      width 145px
      text-align center
      font-size 1.6rem
      padding-top 10px

      .price {
        font-weight bold
        line-height 1
        color #01736d
        margin-bottom 10px
      }
      .btn {
        cursor pointer
        font-size 1.6rem
        font-weight 500
        display block
        background-color #00a099
        color #fff
        line-height 1.35
        padding 0
        border none
        outline 0
        text-align center
        text-decoration none
        padding 8px 4px 6px
        margin-bottom 8px
      }
      .phone {
        line-height 1
        margin-bottom 4px
        color #00a099
        font-weight 500
      }
    }
  }
  &.catalog-single {
    .block-header {
      margin-bottom 15px
      clearix()

      h2 {
        display inline
      }
      .rating {
        float right
        width 132px
        height 22px
        display block
        padding 0
        margin 13px 0
        list-style none
        font-size 0

        li {
          display inline-block
          width 23px
          height 22px
          background url(../img/static/rating-star-01.png) no-repeat 0 0

          &.empty {
            background-image url(../img/static/rating-star-02.png)
          }
        }
        li + li {
          margin-left 4px
        }
      }
    }
    .block-body {
      font-size 1.6rem

      .description-col {
        float left
        width 640px
        padding-bottom 20px

        p:first-of-type {
          strong {
            color #00a099
          }
        }
        a {
          text-decoration underline

          &:hover {
            text-decoration none
          }
        }
      }
      .right-col {
        float right
        width 270px
        overflow hidden
        clearfix()

        .image-gallery {
          list-style none
          padding 0
          margin 0 -7px 70px 0
          clearfix()

          li {
            width 62px
            float left
            margin-right 7px
            margin-bottom 6px

            &.main-image {
              float none
              width 100%
            }
          }
        }
        .details {
          float right
          min-width 145px
          text-align center
          font-size 1.6rem
          padding-top 10px

          .price {
            font-weight bold
            font-size 2.4rem
            line-height 1
            color #01736d
            margin-bottom 10px
            white-space nowrap
          }
          .btn {
            cursor pointer
            font-size 1.6rem
            font-weight 500
            display block
            background-color #00a099
            color #fff
            line-height 1.35
            padding 0
            border none
            outline 0
            text-align center
            text-decoration none
            padding 8px 4px 6px
            margin-bottom 8px
          }
          .phone {
            line-height 1
            margin-bottom 4px
            color #00a099
            font-weight 500
          }
        }
      }
      .map-holder {
        clear both
        height 0
        overflow hidden

        &.show {
          margin-bottom 20px
          height 420px
          border 1px solid #000
        }
      }
    }
  }
}

.back-to-catalog {
  border-bottom 1px solid #999
  padding 0 0 16px
  margin-top -9px
  margin-bottom 25px
  text-align center

  > div {
    padding 16px 0
    background-color #00a099
  }
  a {
    text-decoration none
    display inline-block
    background-color #fff
    font-size 2.2rem
    line-height 1.35
    padding 10px 0 8px
    width 254px
  }
}

.signup-form {
  background-color #d8c2a3
  font-size 2.1rem
  padding 38px 38px 0

  .form-actions {
    position relative
    margin 0 -38px
    background-color #00a099
    padding 36px 0
    text-align center

    [type="submit"] {
      border none
      background-color #fff
      background-image none
      line-height 1.2
      padding 9px 17px
    }
  }
  fieldset {
    border-bottom 1px solid #fff
    margin-bottom 25px

    &.no-border {
      border-bottom none
    }

    .form-group {
      clearfix()
      border-bottom none
      padding-bottom 0
      margin-bottom 20px

      label {
        width 224px
        display block
        float left
        margin-bottom 0
        padding 10px 0
        line-height 1.1

        & + .form-control {
          float left
          width calc(100% - 224px)
        }
      }
    }
  }
  .form-group {
    border-bottom 1px solid #fff
    padding-bottom 15px
    margin-bottom 26px

    label {
      margin-bottom 22px

      span {
        color #978772
      }
    }
  }
  .radio-group {
    padding-bottom 23px
    margin-bottom 26px
    border-bottom 1px solid #fff

    label {
      margin-bottom 0
    }
    .radio-inline {
      margin-left 95px
    }
  }
  .file-group {
    padding-bottom 26px
    margin-bottom 26px
    border-bottom 1px solid #fff

    label {
      margin-bottom 0

      & > span {
        color #978772
      }
    }
    input[type="file"] {
      display inline-block
      font-size 1.6rem
      line-height 1
      margin-left 100px
    }
  }
}
