//
// Search form
// -------------------------------------------------- //

.search-form {
  position absolute
  right 0
  top 0
  width 362px
  min-height 64px
  padding 12px 30px 0 30px
  z-index 10
  background-color #ededed
  overflow hidden

  @media (max-width: 1400px) {
    width 294px
  }
  &.is-cabinet-search-form {
    width 840px

    @media (max-width: 1680px) {
      width 405px
    }

    + .sections-menu {
      @media (max-width: 1679px) {
        position absolute
        top 0
        left 50%
        margin-left -190px !important
      }
      @media (min-width: 1680px) {
        float right !important
        margin-right 905px !important
      }
    }
  }
  &.is-show-results {
    background-color #f7f7f7
    box-shadow -5px 5px 5px rgba(0,0,0,.13)
    animation searchResultsAnimation 1.5s cubic-bezier(.39,1.31,.28,1)
  }

  .form-group {
    margin-bottom 12px

    .form-control-feedback {
      height 40px
      width 40px
      line-height 40px
    }
  }
  .form-control {
    border-color brand-primary
    height 40px
    line-height 1.3
    padding-top 9px
    padding-bottom 9px
    padding-left 17px

    &:focus {
      border-color mix(brand-primary, #000, 95%)
    }
  }
  .search-result {
    clearfix()
    border-bottom 1px solid #bcbcbc
    padding-bottom 14px
    text-decoration none
    display block

    & + .search-result {
      padding-top 14px
    }
    &:last-child {
      border-bottom none
      padding-bottom 0
    }
    &:hover {
      .result-title {
        color mix(#000, #fff, 85%)
      }
    }

    .image-holder {
      display block
      float left
      width 60px
      height 60px

      &.is-empty {
        background url(../img/static/strikeout-circle.svg) no-repeat center/30px 30px #e5e5e5
      }
    }
    .info-col {
      margin-left 79px
      height 60px
      display flex
      flex-direction column
      justify-content center
    }
    .publish-date {
      font-size 1.2rem
      line-height 1
      color rgba(0,0,0,.4)
      margin-bottom 3px
    }
    .result-title {
      color #000
    }
  }
}


.twitter-typeahead {
  display block !important
}
.tt-menu {
  position: static !important
  margin-top 14px
}
